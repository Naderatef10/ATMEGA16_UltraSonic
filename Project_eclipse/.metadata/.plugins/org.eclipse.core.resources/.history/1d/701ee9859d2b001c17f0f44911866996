#include "ultrasonic.h"
#include "lcd.h"
#include <avr/io.h>
#include <util/delay.h>


int main(){
	SREG |= (1<<7);
	uint16 dist=0;
	LCD_init();
	Ultrasonic_init();
	LCD_displayString("Distance=   cm");

	while(1){
		Ultrasonic_Trigger();
		_delay_ms(10);
		dist= Ultrasonic_readDistance();
		LCD_moveCursor(0,9);
		LCD_intgerToString(dist);
		LCD_displayString("Distance=   cm");


	}




}
