#include "ultrasonic.h"
#include "lcd.h"
#include <avr/io.h>
#include <util/delay.h>


int main(){
	SREG |= (1<<7);
	uint16 dist=0;
	LCD_init();
	Ultrasonic_init();
	while(1){

		Ultrasonic_Trigger();
		_delay_ms(10);
		dist= Ultrasonic_readDistance();
		LCD_displayString("Distance is: ");
		LCD_moveCursor(0,13);
		LCD_intgerToString(dist);

	}




}
